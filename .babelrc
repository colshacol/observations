{
  "env": {
    "development": {
      "plugins": [
        "transform-decorators-legacy",
        "transform-class-properties"
      ],
      "presets": [
        "stage-0",
        "es2015"
      ]
    },

    "production": {
      "plugins": [
        [
          "flow-runtime", {
            "assert": true,
            "annotate": true
          }
        ],
        "transform-decorators-legacy",
        "transform-class-properties"
      ],
      "presets": [
        "stage-0",
        "es2015"
      ]
    }
  }
}